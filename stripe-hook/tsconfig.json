{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "ts-built" ,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true                            /* Skip type checking all .d.ts files. */
  },
  "exclude": ["/node_modules", "**/.*/", "ts-built"]
}
